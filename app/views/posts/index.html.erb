<div class="m-5 col-sm-10">
  <h4>All posts from <%= @user.name %></h4>
  <% Post.order(created_at: :desc).includes(:user).each do |post|%>
  <%= render post %>
  <div class="comments card mt-0">
    <% post.comments.order(created_at: :desc).includes(:user).limit(5).each do |comment|%>
    <p>
      <strong><%= comment.user.name %>:</strong>
      <%= comment.text %>
    </p>
    <% end %>
  </div>
  <% end %>
</div>
